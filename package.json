{
  "name": "buildprop-syntax",
  "displayName": "build.prop Syntax Highlighting",
  "description": "Provides syntax highlighting for android build.prop files.",
  "version": "1.1.0",
  "publisher": "JeanxPereira",
  "repository": {
    "type": "git",
    "url": "https://github.com/JeanxPereira/vscode-buildprop-syntax.git"
  },
  "categories": ["Programming Languages", "Other"],
  "contributes": {
    "languages": [
      {
        "id": "buildprop",
        "aliases": ["Build Prop", "build.prop"],
        "extensions": [".prop"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "buildprop",
        "scopeName": "source.buildprop",
        "path": "./syntaxes/buildprop.tmLanguage.json"
      }
    ],
    "keywords": [
      "android",
      "build.prop",
      "syntax highlighting",
      "configuration"
    ]
  }
}
