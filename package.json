{
  "name": "buildprop-syntax",
  "displayName": "build.prop Android Syntax Highlighting",
  "description": "Provides syntax highlighting for android build.prop files.",
  "version": "1.1.2",
  "icon": "images/icon.png",
  "publisher": "JeanxPereira",
  "repository": {
    "type": "git",
    "url": "https://github.com/JeanxPereira/vscode-buildprop-syntax.git"
  },
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": ["Programming Languages", "Other"],
  "contributes": {
    "languages": [
      {
        "id": "buildprop",
        "aliases": ["Build Prop", "build.prop"],
        "extensions": [".prop"],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "initlogs",
        "aliases": ["Init Logs", "initlogs"],
        "extensions": [".rc"],
        "configuration": "./language-configuration.json"
    }
    ],
    "grammars": [
      {
        "language": "buildprop",
        "scopeName": "source.buildprop",
        "path": "./syntaxes/buildprop.tmLanguage.json"
      },
      {
        "language": "initlogs",
        "scopeName": "source.initlogs",
        "path": "./syntaxes/init-logs-rc.json"
      }
    ],
    "keywords": [
      "android",
      "build.prop",
      "syntax highlighting",
      "configuration"
    ]
  }
}
